{
  "manifest_version": 3,
  "name": "웹 페이지 캡쳐 익스텐션",
  "version": "1.0",
  "description": "현재 브라우저 페이지를 캡쳐하여 이미지로 저장합니다.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/public/images/icon16.png",
      "48": "/public/images/icon48.png",
      "128": "/public/images/icon128.png"
    }
  },
  "icons": {
    "16": "/public/images/icon16.png",
    "48": "/public/images/icon48.png",
    "128": "/public/images/icon128.png"
  }
}